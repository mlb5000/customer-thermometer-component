{
	"editor.formatOnSave": true,
	"eslint.run": "onSave",
	"eslint.validate": [{ "language": "javascript", "autoFix": true }],
	"editor.codeActionsOnSave": {
		// For ESLint
		"source.fixAll.eslint": true,
		// For TSLint
		"source.fixAll.tslint": true,
		// For Stylelint
		"source.fixAll.stylelint": true
	}
}
